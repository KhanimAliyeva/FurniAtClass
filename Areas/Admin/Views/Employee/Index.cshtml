@using FurniMpa201.Models
@model List<Employee>
<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Position</th>
                    <th scope="col">Image</th>
                    <th scope="col">CreatedDate</th>
                    <th scope="col">UpdatedDate</th>
                    <th scope="col">Actions</th>
                    <th scope="col">Activeness</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <th scope="row">@employee.Id</th>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Position</td>
                        <td>
                            <img src="@employee.ImageUrl" width="40" height="40" />
                        </td>
                        <td>@employee.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@employee.UpdatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a class="btn btn-warning"
                               asp-area="Admin"
                               asp-controller="Employee"
                               asp-action="Update"
                               asp-route-id="@employee.Id">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form asp-area="Admin"
                                  asp-controller="Employee"
                                  asp-action="Delete"
                                  method="post"
                                  asp-route-id="@employee.Id"
                                  style="display:inline">
                                <button class="btn btn-danger" type="submit">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>

                        <td>
                            <form asp-area="Admin"
                                  asp-controller="Employee"
                                  asp-action="SoftDelete"
                                  method="post"
                                  asp-route-id="@employee.Id"
                                  style="display:inline">

                                <button type="submit"
                                        class="btn @(employee.IsDeleted ? "btn-success" : "btn-danger")">
                                    @(employee.IsDeleted ? "Active" : "Inactive")
                                </button>

                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
