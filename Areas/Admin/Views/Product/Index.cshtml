@using FurniMpa201.Models
@model List<Product>

    <div class="container">
        <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Created Date</th>
                    <th scope="col">Updated Date</th>
                    <th scope="col">Actions</th>
                    <th scope="col">Activeness</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <th scope="row">@product.Id</th>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C2")</td>
                        <td>
                            <img src="@product.ImageUrl" width="40" height="40" />
                        </td>
                        <td>@product.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@product.UpdatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a class="btn btn-warning"
                               asp-area="Admin"
                               asp-controller="Product"
                               asp-action="Update"
                               asp-route-id="@product.Id">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form asp-area="Admin"
                                  asp-controller="Product"
                                  asp-action="Delete"
                                  method="post"
                                  asp-route-id="@product.Id"
                                  style="display:inline">
                                <button class="btn btn-danger" type="submit">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>

                        <td>
                            <form asp-area="Admin"
                                  asp-controller="Product"
                                  asp-action="SoftDelete"
                                  method="post"
                                  asp-route-id="@product.Id"
                                  style="display:inline">

                                <button type="submit"
                                        class="btn @(product.IsDeleted ? "btn-success" : "btn-danger")">
                                    @(product.IsDeleted ? "Active" : "Inactive")
                                </button>

                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

        </div>
    </div>
